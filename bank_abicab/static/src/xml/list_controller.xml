<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="bank.abicab.ListView.Buttons" t-inherit="web.ListView.Buttons" t-inherit-mode="extension" owl="1">
        <xpath expr="//*[@class='btn btn-primary o_list_button_add']" position="after">
            <button type="button" class="btn btn-primary o_list_button_add" data-hotkey="c"
                t-on-click="bankButtonDownload">
                <i title="Scarica lista istituti" class="fa fa-download"></i>
                <span class="d-none d-sm-inline"> Scarica lista istituti</span>
            </button>
        </xpath>
        <!-- invisible button create xpath attribute class dnone-->
        <xpath expr="//*[@class='btn btn-primary o_list_button_add']" position="attributes">
            <attribute name="class">d-none</attribute>
        </xpath>
    </t>
</templates>