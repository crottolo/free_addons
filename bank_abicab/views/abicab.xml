<?xml version="1.0"?>
<odoo>

    <record id="view_bank_filter_abicab" model="ir.ui.view">
        <field name="name">res.bank.filter.abicab</field>
        <field name="model">res.bank</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Search Bank">
                <field name="name" />
                <field name="abi" />
                <field name="cab" />
                
            </search>
        </field>
    </record>

    <record id="view_bank_tree_abicab" model="ir.ui.view">
        <field name="name">res.bank.tree.abicab</field>
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.view_res_bank_tree" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="abi" />
                <field name="cab" />
            </field>
        </field>
    </record>

    <record id="view_bank_form_abicab" model="ir.ui.view">
        <field name="name">res.bank.form.abicab</field>
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.view_res_bank_form" />
        <field name="arch" type="xml">
            <field name="bic" position="after">
                <field name="abi" />
                <field name="cab" />
            </field>
        </field>
    </record>

    <record id="view_partner_bank_form_abicab_form" model="ir.ui.view">
        <field name="name">res.partner.bank.form</field>
        <field name="model">res.partner.bank</field>
        <field name="inherit_id" ref="base.view_partner_bank_form" />
        <field name="arch" type="xml">
            <field name="bank_id" position="after">
                <newline />
                <field name="bank_abi" />
                <field name="bank_cab" />
            </field>
        </field>
    </record>

    <!-- Banche Italiane form -->
    <!-- bank.abicab form view -->
    <record id="bank_abicab_view_form" model="ir.ui.view">
        <field name="name">bank.abicab.view.form</field>
        <field name="model">bank.abicab</field>
        <field name="arch" type="xml">
            <form string="Bank ABI CAB">
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="abi" />
                        <field name="cab" />
                        <field name="istituto" required="1"/>
                        <field name="sportello" />
                        <field name="indirizzo" />
                        <field name="citta" />
                        <field name="cap" />
                        <field name="provincia" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Banche Italiane tree -->
    <!-- model.name tree view -->
    <record id="bank_abicab_view_tree" model="ir.ui.view">
        <field name="name">bank.abicab.view.tree</field>
        <field name="model">bank.abicab</field>
        <field name="arch" type="xml">
            <tree >
                <!-- Add your fields here -->
                <field name="abi" />
                <field name="cab" />
                <field name="istituto" />
                <field name="sportello" />
                <field name="indirizzo" />
                <field name="citta" />
                <field name="cap" />
                <field name="provincia" />
            </tree>
        </field>
    </record>

    <!-- Banche Italiane search --> 
    <!-- model.name search view -->
    <record id="bank_abicab_view_search" model="ir.ui.view">
        <field name="name">bank.abicab.view.search</field>
        <field name="model">bank.abicab</field>
        <field name="arch" type="xml">
            <search>
                <!-- Add your fields here -->
                <field name="istituto" />
                <field name="abi" />
                <field name="cab" />
                <field name="sportello" />
                <field name="indirizzo" />
                <field name="citta" />
                <field name="cap" />
                <field name="provincia" />
                <group expand="0" name="group_by" string="Group By">
                    <filter name="abi" string="ABI" context="{'group_by': 'abi'}" />
                    <filter name="cab" string="CAB" context="{'group_by': 'cab'}" />
                    <filter name="provincia" string="Provincia" context="{'group_by': 'provincia'}" />
                    <filter name="citta" string="CittÃ " context="{'group_by': 'citta'}" />
                    <filter name="istituto" string="Istituto" context="{'group_by': 'istituto'}" />
                    <filter name="sportello" string="Sportello" context="{'group_by': 'sportello'}" />
                    <filter name="indirizzo" string="Indirizzo" context="{'group_by': 'indirizzo'}" />
                    <filter name="cap" string="CAP" context="{'group_by': 'cap'}" />
                </group>
            </search>
        </field>
    </record>
    <record id="view_partner_bank_search" model="ir.ui.view">
        <field name="name">res.partner.bank.search</field>
        <field name="model">res.partner.bank</field>
        <field name="inherit_id" ref="base.view_partner_bank_search" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <filter name="bank_id_not_set" string="Banca Non Impostata" domain="[('bank_id', '=', False)]"/>
            </xpath>
        </field>
    </record>

    <!-- azione -->
    <record id="action_bank_abicab" model="ir.actions.act_window">
        <field name="name">Banche Italiane</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bank.abicab</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Non ci sono banche italiane registrate. Clicca sul pulsante "Scarica lista istituti" per scaricare la lista delle banche italiane.
            </p><p>
                Questa azione ti consente di visualizzare e gestire le banche italiane associate alle operazioni bancarie.
            </p>
        </field>
    </record>


    <!-- menu -->
    <menuitem id="menu_bank_abicab"
        name="Banche Italiane ABI e CAB"
        action="action_bank_abicab"
        parent="contacts.menu_config_bank_accounts"
        sequence="20"
    />

</odoo>